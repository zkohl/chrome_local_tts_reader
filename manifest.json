{
  "manifest_version": 3,
  "name": "OpenAI Compatible TTS Reader",
  "version": "1.0",
  "description": "Reads webpage content using OpenAI compatible TTS service",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "offscreen",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "read-aloud": {
      "suggested_key": {
        "default": "Alt+Shift+R",
        "mac": "Alt+Shift+R"
      },
      "description": "Read selected text or page aloud"
    },
    "stop-audio": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "Stop audio playback"
    }
  },
  "icons": {
    "48": "icon48.png"
  }
}